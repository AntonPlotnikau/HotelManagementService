@model BLL.Interface.Models.User


<div class="container">
	<div class="row">
		<div class="col-lg-12">
			<h2 class="page-header">
				Вход на сайт
			</h2>
			<ol class="breadcrumb">
				<li>
					@Html.ActionLink("Домой", "Index", "Home")
				</li>
				<li class="active">Авторизация</li>
			</ol>
		</div>
	</div>
	@using (Html.BeginForm())
	{
		@Html.AntiForgeryToken()

		<div class="form-horizontal">
			<h4>Вход</h4>
			<hr />
			@Html.ValidationSummary(true, "", new { @class = "text-danger" })
			<div class="form-group">
				<p class="control-label col-md-2">Логин</p>
				<div class="col-md-10">
					@Html.EditorFor(model => model.UserName, new { htmlAttributes = new { @class = "form-control" } })
					@Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger" })
				</div>
			</div>

			<div class="form-group">
				<p class="control-label col-md-2">Пароль</p>
				<div class="col-md-10">
					@Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control" } })
					@Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
				</div>
			</div>

			<div class="form-group">
				<div class="col-md-offset-2 col-md-10">
					<input type="submit" value="Войти" class="btn btn-default" />
				</div>
			</div>
		</div>
	}

</div>

<script src="~/Scripts/jquery-3.3.1.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>