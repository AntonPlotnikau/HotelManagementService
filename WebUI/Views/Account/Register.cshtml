@using BLL.Services
@model BLL.Interface.Models.User


<div class="container">
	<div class="row">
		<div class="col-lg-12">
			<h2 class="page-header">
				Регистрация
			</h2>
			<ol class="breadcrumb">
				<li>
					@Html.ActionLink("Домой", "Index", "Home")
				</li>
				<li class="active">Регистрация</li>
			</ol>
		</div>
	</div>
	@using (Html.BeginForm())
	{
		@Html.AntiForgeryToken()

	<div class="form-horizontal">
		<h4>Создание аккаунта</h4>
		<hr />
		@Html.ValidationSummary(true, "", new { @class = "text-danger" })
		<div class="form-group">
			<p class="control-label col-md-2">Логин</p>
			<div class="col-md-10">
				@Html.EditorFor(model => model.UserName, new { htmlAttributes = new { @class = "form-control" } })
				@Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger" })
			</div>
		</div>

		<div class="form-group">
			<p class="control-label col-md-2">Пароль</p>
			<div class="col-md-10">
				@Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control" } })
				@Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
			</div>
		</div>

		<div class="form-group">
			<p class="control-label col-md-2">Пол</p>
			<div class="col-md-10">
				@Html.EnumDropDownListFor(model => model.Info.Sex, new { htmlAttributes = new { @class = "dropdown" } })
			</div>
		</div>

		<div class="form-group">
			<p class="control-label col-md-2">Имя</p>
			<div class="col-md-10">
				@Html.EditorFor(model => model.Info.Name, new { htmlAttributes = new { @class = "form-control" } })
				@Html.ValidationMessageFor(model => model.Info.Name, "", new { @class = "text-danger" })
			</div>
		</div>

		<div class="form-group">
			<p class="control-label col-md-2">Фамилия</p>
			<div class="col-md-10">
				@Html.EditorFor(model => model.Info.Surname, new { htmlAttributes = new { @class = "form-control" } })
				@Html.ValidationMessageFor(model => model.Info.Surname, "", new { @class = "text-danger" })
			</div>
		</div>

		<div class="form-group">
			<p class="control-label col-md-2">Номер телефона</p>
			<div class="col-md-10">
				@Html.EditorFor(model => model.Info.PhoneNumber, new { htmlAttributes = new { @class = "form-control" } })
				@Html.ValidationMessageFor(model => model.Info.PhoneNumber, "", new { @class = "text-danger" })
			</div>
		</div>

		<div class="form-group">
			<p class="control-label col-md-2">Электронная почта</p>
			<div class="col-md-10">
				@Html.EditorFor(model => model.Info.Email, new { htmlAttributes = new { @class = "form-control" } })
				@Html.ValidationMessageFor(model => model.Info.Email, "", new { @class = "text-danger" })
			</div>
		</div>

		<div class="form-group">
			<p class="control-label col-md-2">Возраст</p>
			<div class="col-md-10">
				@Html.EditorFor(model => model.Info.Age, new { htmlAttributes = new { @class = "form-control" } })
				@Html.ValidationMessageFor(model => model.Info.Age, "", new { @class = "text-danger" })
			</div>
		</div>

		<div class="form-group">
			<div class="col-md-offset-2 col-md-10">
				<input type="submit" value="Добавить" class="btn btn-default" />
			</div>
		</div>
	</div>
	}
</div>

<script src="~/Scripts/jquery-3.3.1.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>

