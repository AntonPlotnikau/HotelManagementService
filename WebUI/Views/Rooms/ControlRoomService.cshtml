@model IEnumerable<BLL.Interface.Models.Room>
@using BLL.Services

@{
    ViewBag.Title = "ControlRoomService";
}

    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <h2 class="page-header">
                    Управление номерами
                </h2>
                <ol class="breadcrumb">
                    <li>
                        @Html.ActionLink("Домой", "Index", "Home")
                    </li>
                    <li class="active">Управление номерами</li>
                </ol>
            </div>
        </div>
        <p>
            @Html.ActionLink("Добавить комнату", "CreateRoom")
        </p>
        <table class="table table-bordered table-condensed table-hover table-striped">
            <tr>
                <th>Количество мест</th>
                <th>Цена за ночь (BYN)</th>
                <th>Тип номера</th>
                <th>Описание</th>
                <th>Номер</th>
                <th>Действия</th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.PlacesCount)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DayPrice)
                    </td>
                    <td>
                        @item.RoomType.GetDisplayName()
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <td class='col-sm'>
                        <img width="250" height="200" src="@item.ImageURL"/>
                    </td>
                    <td>
                        @Html.ActionLink("Редактировать", "EditRoom", new { id = item.Id }) |
                        @Html.ActionLink("Удалить", "DeleteRoom", new { id = item.Id })
                    </td>
                </tr>
            }
        </table>
        </div>