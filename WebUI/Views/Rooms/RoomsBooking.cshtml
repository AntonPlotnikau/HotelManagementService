@using BLL.Interface.Models
@model List<Room>

@{
    ViewBag.Title = "One Column Portfolio";
}
<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">
                One Column Portfolio
                <small>Showcase Your Work</small>
            </h1>
            <ol class="breadcrumb">
                <li>
                    @Html.ActionLink("Home", "Index", "Home")
                </li>
                <li class="active">One Column Portfolio</li>
            </ol>
        </div>
    </div>
    @foreach (var item in Model)
    {
        <div class="row">
            <div class="col-md-7">
                <img src="@item.ImageURL" class="img-responsive">
            </div>
            <div class="col-md-5">
                <h3>Цена за ночь: @item.DayPrice BYN</h3>
                <h4>Количество спальных мест: @item.PlacesCount</h4>
                <p>@item.Description</p>
                <a href="@Url.Action("SingleItem", "Portfolio")" class="btn btn-primary">Забронировать<i class="fa fa-angle-right"></i></a>
            </div>
        </div>
        <hr>
    }

    <div class="row text-center">
        <div class="col-lg-12">
            <ul class="pagination">
                <li>
                    <a href="#">«</a>
                </li>
                <li class="active">
                    <a href="#">1</a>
                </li>
                <li>
                    <a href="#">2</a>
                </li>
                <li>
                    <a href="#">3</a>
                </li>
                <li>
                    <a href="#">4</a>
                </li>
                <li>
                    <a href="#">5</a>
                </li>
                <li>
                    <a href="#">»</a>
                </li>
            </ul>
        </div>
    </div>
</div>