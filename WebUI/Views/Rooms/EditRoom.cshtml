@using BLL.Services
@model BLL.Interface.Models.Room

@{
    ViewBag.Title = "EditRoom";
}

<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <h2 class="page-header">
                Редактирование номера
            </h2>
            <ol class="breadcrumb">
                <li>
                    @Html.ActionLink("Домой", "Index", "Home")
                </li>
                <li class="active">Редактирование номера</li>
            </ol>
        </div>
    </div>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <h4>Номер</h4>
            <hr/>
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.Id)

            <div class="form-group">
                <p class = "control-label col-md-2">Количество мест</p>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.PlacesCount, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.PlacesCount, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <p class="control-label col-md-2">Цена за ночь в BYN</p>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.DayPrice, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.DayPrice, "", new { @class = "text-danger" })
                </div>
            </div>
            
            <div class="form-group">
                <p class="control-label col-md-2">Тип номера</p>
                <div class="col-md-10">
                    @Html.EnumDropDownListFor(model => model.RoomType, new { htmlAttributes = new { @class = "dropdown" } })
                </div>
            </div>

            <div class="form-group">
                <p class="control-label col-md-2">Описание</p>
                <div class="col-md-10">
                    @Html.TextAreaFor(model => model.Description, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <p class="control-label col-md-2">URL изображения</p>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.ImageURL, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.ImageURL, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Save" class="btn btn-default"/>
                </div>
            </div>
        </div>
    }

    <div>
        @Html.ActionLink("Назад к номерам", "ControlRoomService")
    </div>

</div>

<script src="~/Scripts/jquery-3.3.1.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
